<link href="~/css/partials/BookNowSideForm.css" rel="stylesheet" />

<section class="book-now-side-form">
    <div class="side-form__container">
        <form action="">
            <div class="side-form__title">Title</div>

            <div class="mb-3">
                <label for="dateInput" class="form-label">DATE</label>
                <input id="dateRange" class="form-control" name="dateBooking" placeholder="Start date - End date">
            </div>

            <div class="mb-3">
                <label for="roomSelection" class="form-label">ROOM</label>
                <select class="form-select" id="roomSelection">
                    <option value="">Single</option>
                    <option value="">Double</option>
                    <option value="">Triple</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="guestCount" class="form-label">GUEST</label>
                <select class="form-select" id="guestCount">
                    <option value="">1</option>
                    <option value="">2</option>
                    <option value="">3</option>
                    <option value="">4</option>
                    <option value="">5</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="fullNameInput" class="form-label">FULL NAME</label>
                <input type="text" class="form-control" id="fullNameInput" placeholder="Enter your full name">
            </div>

            <div class="mb-3">
                <label for="emailInput" class="form-label">EMAIL</label>
                <input type="email" class="form-control" id="emailInput" placeholder="Enter your email">
            </div>

            <div class="mb-3">
                <label for="phoneInput" class="form-label">PHONE</label>
                <input type="tel" class="form-control" id="phoneInput" placeholder="Enter your phone number">
            </div>

            <div class="mb-3">
                <label for="notesTextarea" class="form-label">NOTES</label>
                <textarea class="form-control" id="notesTextarea" rows="3"></textarea>
            </div>

            <div class="mb-3">
                <div class="d-flex justify-content-between total">
                    <div>TOTAL:</div>
                    <div>$0.00</div>
                </div>
            </div>

            <button type="submit" class="btn book-now-button">Book Now</button>

            <div class="form-check mt-3">
                <input class="form-check-input" type="checkbox" id="termsCheck">
                <label class="form-check-label form-check-text" for="termsCheck">
                    I agree to The Catba Catamaran Terms and Conditions
                </label>
            </div>
        </form>
    </div>

</section>
